<body ng-app="BasicApp">
  <h1>New Role</h1>
  
  <% if @role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul id="error_explanation_list">
      <% @role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <form ng-submit="submit()" ng-controller="RolesController">
    <div class="form-group">
      <label for="role_role">Role</label><br>
      <input class="form-control" value="" ng-model="full_name" name="role[role]" id="role_role" type="text"/> 
    </div>
    <%= render 'layouts/partials/custom_submit_button', label: 'Create Role' %>
  </form>
  
  <br><br>
  
  <div style="display: none;" class="progress">
    <div class="progress-bar progress-bar-striped active" role="progressbar" id="progress_bar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
    </div>
  </div>
  
  <%= link_to roles_path do %>
    <i class="fa fa-reply" aria-hidden="true"></i> Back
  <% end %>
</body>