<div style="padding-bottom: 40px">
  <% if !anonymous_user? %>
    <div style="float: left; padding-left: 5px; padding-top: 5px;">
      <%= link_to user_path(session[:user_id]) do %>
        <i id="user_home_icon" class="fa fa-user-circle-o fa-2x" aria-hidden="true"></i>
      <% end %>
    </div>
  <% end %>
  
  <div style="float: right; padding-right: 5px; padding-top: 5px;">
    <div class="button" id="login_button">
      <% if anonymous_user? %>
        Login
      <% else %>
        Logout
      <% end %>
    </div>
    
    <div class="button" id="register_button">
      Sign Up
    </div>
  </div>
</div>